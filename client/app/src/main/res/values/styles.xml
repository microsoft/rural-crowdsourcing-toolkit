<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ThemeGray" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextColor">@android:color/black</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="colorPrimary">@color/colorLightGrey</item>
        <item name="colorPrimaryDark">@color/colorgrey</item>
        <item name="colorAccent">@color/colorLightBlue</item>
        <item name="appLanguageTextColor">@color/colorBlack</item>
        <item name="skillSelectionBgColor">@color/colorWhite</item>
        <item name="skillSelectionStrokeColor">@color/colorRed</item>
        <item name="colorAccentImageRing">@color/colorgrey</item>
        <item name="colorSkillSelectImageRing">@color/colorGreen</item>
        <item name="colorSkillIgnoreImageRing">@color/colorRed</item>
        <item name="colorToolbarDashBoard">@color/colorWhite</item>
        <item name="colorBottomNavigationTintColor">@color/dk_blue</item>
        <item name="colorBottomNavigationTextColor">@color/dk_blue</item>

        <item name="remainingTaskProgressBackgroundTintColor">@color/colorLightGrey2</item>
        <item name="remainingTasksProgressTintColor">@color/colorLightBlue</item>

        <item name="priceEarnedProgressBackgroundTintColor">@color/colorLightGrey2</item>
        <item name="priceEarnedTasksProgressTintColor">@color/colorLightOrange</item>

        <item name="tasksProgressBackgroundTintColor">@color/colorLightGrey2</item>
        <item name="tasksProgressTintColor">@color/colorLightPurple</item>

        <item name="storyProgressBackgroundTintColor">@color/colorLightGrey2</item>
        <item name="storyProgressTintColor">@color/colorGreenShade2</item>

        <item name="tasksindeterminateProgressTintColor">@color/dk_blue2</item>
        <item name="colorBackgroundLightGrey">@color/colorLightGrey</item>
        <item name="creationCodeOutlineColor">@color/colorLightBlue</item>

        <item name="card1Color">@color/light_green</item>
        <item name="card2Color">@color/light_red</item>
        <item name="card3Color">@color/light_orange</item>
    </style>

    <style name="Widget.textMedium" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/appLanguageTextColor</item>
        <item name="android:typeface">sans</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
    </style>

    <style name="multilineText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">?attr/titleTextColor</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_8ssp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="multilineError" parent="multilineText">
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="TextTvStyle">
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:layout_marginBottom">@dimen/_15sdp</item>
        <item name="android:background">@drawable/border_black</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_20sdp</item>
        <item name="android:textColor">#000000</item>
        <item name="autoSizeMaxTextSize">@dimen/_30ssp</item>
        <item name="autoSizeMinTextSize">@dimen/_12ssp</item>
        <item name="autoSizeStepGranularity">@dimen/_2ssp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="KaryaPaymentsButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/mtrl_text_btn_text_color_selector</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_text_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_text_btn_padding_right</item>
        <item name="iconTint">@color/mtrl_text_btn_text_color_selector</item>
        <item name="iconPadding">@dimen/mtrl_btn_text_btn_icon_padding</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
        <item name="backgroundTint">@drawable/karya_payments_button_bg_selector</item>
    </style>

</resources>
