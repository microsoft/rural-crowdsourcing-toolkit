<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashBoardConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?colorPrimaryLight"
    tools:context=".ui.leaderboard.LeaderboardFragment">

    <com.microsoft.research.karya.ui.views.KaryaToolbar
        android:id="@+id/appTb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleText="@string/home_screen_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/nameCv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:translationZ="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/appTb">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/c_white"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                app:flow_verticalAlign="center">

                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?colorPrimary"
                    android:textSize="@dimen/_24ssp"
                    tools:text="Meena" />

                <TextView
                    android:id="@+id/phoneNumberTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/c_dark_grey"
                    android:textSize="@dimen/_18ssp"
                    tools:text="9999999999" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_20sdp">

                <TextView
                    android:id="@+id/pointsTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    tools:text="2083" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/leaderboard_points"
                    android:textSize="@dimen/_18ssp"
                    tools:text="points" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameCv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_20sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/moveToLeaderboardCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:translationZ="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="@dimen/_5sdp"
                    android:text="@string/leaderboard_title"
                    android:textColor="?colorPrimary"
                    android:textSize="@dimen/_18ssp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/taskSummaryCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:translationZ="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/taskLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="@dimen/_15sdp">

                        <TextView
                            android:id="@+id/taskNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/task_summary_label"
                            android:textColor="?colorPrimary"
                            android:textSize="@dimen/_18ssp" />

                    </LinearLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:columnCount="2">

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_5sdp"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/numIncompleteTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?taskAvailableColor"
                                android:textSize="@dimen/_14ssp"
                                tools:text="9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/tasks_available"
                                android:textColor="?taskAvailableColor"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_5sdp"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/numSkippedTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?taskSkippedColor"
                                android:textSize="@dimen/_14ssp"
                                tools:text="9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/tasks_skipped"
                                android:textColor="?taskSkippedColor"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_5sdp"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/numCompletedTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?taskCompletedColor"
                                android:textSize="@dimen/_14ssp"
                                tools:text="9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/tasks_completed"
                                android:textColor="?taskCompletedColor"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_5sdp"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/numSubmittedTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?taskSubmittedColor"
                                android:textSize="@dimen/_14ssp"
                                tools:text="9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/tasks_submitted"
                                android:textColor="?taskSubmittedColor"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_5sdp"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/numVerifiedTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?taskVerifiedColor"
                                android:textSize="@dimen/_14ssp"
                                tools:text="9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/tasks_verified"
                                android:textColor="?taskVerifiedColor"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/_5sdp"
                            app:layout_columnWeight="1">

                            <TextView
                                android:id="@+id/numExpiredTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="?taskExpiredColor"
                                android:textSize="@dimen/_14ssp"
                                tools:text="9" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:text="@string/tasks_expired"
                                android:textColor="?taskExpiredColor"
                                android:textSize="@dimen/_14ssp" />
                        </LinearLayout>

                    </androidx.gridlayout.widget.GridLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="@string/click_to_do_tasks"
                        android:textSize="@dimen/_16ssp"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/performanceCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:translationZ="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/performance_label"
                        android:textColor="?colorPrimary"
                        android:textSize="@dimen/_20ssp" />

                    <LinearLayout
                        android:id="@+id/recordingScoreLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_20sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recording_task_label"
                            android:textSize="@dimen/_16ssp" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/recordingScore"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:isIndicator="true"
                            app:mrb_progressTint="@color/c_dark_grey"
                            app:mrb_secondaryProgressTint="@color/c_dark_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/transcriptionScoreLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_20sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/transcription_task_label"
                            android:textSize="@dimen/_16ssp" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/transcriptionScore"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:isIndicator="true"
                            app:mrb_progressTint="@color/c_dark_grey"
                            app:mrb_secondaryProgressTint="@color/c_dark_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/typingScoreLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_20sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/typing_task_label"
                            android:textSize="@dimen/_16ssp" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/typingScore"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:isIndicator="true"
                            app:mrb_progressTint="@color/c_dark_grey"
                            app:mrb_secondaryProgressTint="@color/c_dark_grey" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/annotationScoreLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_20sdp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/image_task_label"
                            android:textSize="@dimen/_16ssp" />

                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/imageTaskScore"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:isIndicator="true"
                            app:mrb_progressTint="@color/c_dark_grey"
                            app:mrb_secondaryProgressTint="@color/c_dark_grey" />

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/earningCv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:translationZ="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/earning_label"
                        android:textColor="?colorPrimary"
                        android:textSize="@dimen/_20ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/earningWeekTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_20ssp"
                                tools:text="20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/earned_week_label"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/earningTotalTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_20ssp"
                                tools:text="20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/earned_total_label"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/paidTotalTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_20ssp"
                                tools:text="20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/paid_total_label"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
